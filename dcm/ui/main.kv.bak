#:kivy 2.1.0
#:import MDButton kivymd.uix.button.MDButton
#:import MDLabel kivymd.uix.label.MDLabel
#:import MDScreenManager kivymd.uix.screenmanager.MDScreenManager
#:import MDScreen kivymd.uix.screen.MDScreen
#:import MDBoxLayout kivymd.uix.boxlayout.MDBoxLayout
#:import MDTextField kivymd.uix.textfield.MDTextField
#:import MDCheckbox kivymd.uix.selectioncontrol.MDCheckbox
#:import MDList kivymd.uix.list.MDList
#:import ScrollView kivy.uix.scrollview.ScrollView

<MainScreen>:
    name: 'main_screen'
    
    # Main container with a white background
    MDBoxLayout:
        orientation: 'vertical'
        spacing: 0
        padding: 0
        
        # Set background color
        md_bg_color: 1, 1, 1, 1
        
        # Main content area with ScreenManager
        MDScreenManager:
            id: screen_manager
            
            # Playlists Screen
            MDScreen:
                name: 'playlists_screen'
                
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '20dp'
                    spacing: '20dp'
                    
                    MDLabel:
                        text: 'Your Playlists'
                        halign: 'center'
                        font_style: 'H5'
                        theme_text_color: 'Primary'
                        bold: True
                        size_hint_y: None
                        height: self.texture_size[1]
                    
                    MDLabel:
                        text: 'Your playlists will appear here'
                        halign: 'center'
                        theme_text_color: 'Secondary'
                        size_hint_y: None
                        height: self.texture_size[1]
            
            # Library Screen
            MDScreen:
                name: 'library_screen'
                
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '20dp'
                    
                    MDLabel:
                        text: 'Your Music Library'
                        halign: 'center'
                        font_style: 'H5'
                        theme_text_color: 'Primary'
                        bold: True
                        size_hint_y: None
                        height: self.texture_size[1]
                    
                    ScrollView:
                        MDList:
                            id: library_list
                            spacing: '10dp'
            
            # Recommend Screen
            MDScreen:
                name: 'recommend_screen'
                
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '20dp'
                    spacing: '20dp'
                    
                    MDLabel:
                        text: 'Get Recommendations'
                        halign: 'center'
                        font_style: 'H5'
                        theme_text_color: 'Primary'
                        bold: True
                        size_hint_y: None
                        height: self.texture_size[1]
                    
                    MDLabel:
                        id: selected_song_label
                        text: 'No song selected'
                        size_hint_y: None
                        height: '30dp'
                        font_style: 'Subtitle1'
                        halign: 'center'
                        theme_text_color: 'Primary'
                    
                    # Select Song Button
                    MDRaisedButton:
                        id: select_song_btn
                        text: 'Select a Song'
                        size_hint: (0.6, None)
                        height: '48dp'
                        pos_hint: {'center_x': 0.5}
                        on_release: app.file_manager_open()
                    
                    # Generate Recommendations Button
                    MDRaisedButton:
                        id: recommend_btn
                        text: 'Get Recommendations'
                        on_release: app.generate_playlist()
                        size_hint: (0.8, None)
                        height: '48dp'
                        pos_hint: {'center_x': 0.5}
                        disabled: not app.selected_song
            
            # Generate Screen
            MDScreen:
                name: 'generate_screen'
                
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '20dp'
                    spacing: '20dp'
                    
                    MDLabel:
                        text: 'Generate Playlist'
                        halign: 'center'
                        font_style: 'H5'
                        theme_text_color: 'Primary'
                        bold: True
                        size_hint_y: None
                        height: self.texture_size[1]
                    
                    # Mood Selection
                    MDLabel:
                        text: 'Select Mood:'
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                    
                    # Mood checkboxes would go here
                    
                    # Song Input
                    MDLabel:
                        text: 'Add Songs (Optional):'
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                    
                    MDRaisedButton:
                        id: add_songs_btn
                        text: 'Select Songs'
                        on_release: app.file_manager_open()
                        size_hint: None, None
                        size: '200dp', '48dp'
                        pos_hint: {'center_x': 0.5}
                    
                    # Generate Button
                    MDRaisedButton:
                        id: generate_btn
                        text: 'Generate Playlist'
                        on_release: app.generate_playlist()
                        size_hint: (0.8, None)
                        height: '48dp'
                        pos_hint: {'center_x': 0.5}
                        disabled: not app.selected_files
                    
                    # Generated Playlist Section
                    MDLabel:
                        text: 'Generated Playlist:'
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                    
                    ScrollView:
                        MDList:
                            id: playlist_items
                            spacing: '10dp'
            
            # Settings Screen
            MDScreen:
                name: 'settings_screen'
                
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '20dp'
                    
                    MDLabel:
                        text: 'Settings'
                        halign: 'center'
                        font_style: 'H5'
                        theme_text_color: 'Primary'
                        bold: True
                        size_hint_y: None
                        height: self.texture_size[1]
                    
                    # Settings options would go here
        
        # Custom Navigation Bar
        MDBoxLayout:
            size_hint_y: None
            height: '56dp'
            padding: '5dp'
            spacing: '5dp'
            md_bg_color: app.theme_cls.primary_color
            
            MDBoxLayout:
                orientation: 'vertical'
                padding: '20dp'
                
                MDLabel:
                    text: 'Your Music Library'
                    halign: 'center'
                    font_style: 'H5'
                    theme_text_color: 'Primary'
                    bold: True
                    size_hint_y: None
                    height: self.texture_size[1]
                
                ScrollView:
                    MDList:
                        id: library_list

        # Main content area
        ScreenManager:
            id: screen_manager

            # Playlists Screen
            Screen:
                name: 'playlists_screen'
                BoxLayout:
                    orientation: 'vertical'
                    padding: '20dp'
                    
                    MDLabel:
                        text: 'Your Playlists'
                        halign: 'center'
                        font_size: '24sp'
                        theme_text_color: 'Primary'
                        bold: True
                    
                    MDLabel:
                        text: 'Your playlists will appear here'
                        halign: 'center'
                        theme_text_color: 'Secondary'

            # Library Screen
            Screen:
                name: 'library_screen'
                BoxLayout:
                    orientation: 'vertical'
                    padding: '20dp'
                    
                    MDLabel:
                        text: 'Music Library'
                        halign: 'center'
                        font_size: '24sp'
                        theme_text_color: 'Primary'
                        bold: True
                    
                    MDLabel:
                        text: 'Your music library will appear here'
                        halign: 'center'
                        theme_text_color: 'Secondary'

            # Song Recommendation Screen (Spotify-like)
            Screen:
                name: 'recommend_screen'
                BoxLayout:
                    orientation: 'vertical'
                    padding: '20dp'
                    spacing: '20dp'
                    
                    MDLabel:
                        text: 'Discover Similar Songs'
                        halign: 'center'
                        font_size: '24sp'
                        theme_text_color: 'Primary'
                        bold: True
                    
                    # Selected Song Display
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: '100dp'
                        spacing: '10dp'
                        padding: '10dp'
                        canvas.before:
                            Color:
                                rgba: 0.95, 0.95, 0.95, 1  # Light gray background
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [10,]
                        
                        MDLabel:
                            text: 'Selected Song:'
                            size_hint_y: None
                            height: '30dp'
                            font_size: '16sp'
                            bold: True
                            theme_text_color: 'Secondary'
                            
                        MDLabel:
                            id: selected_song_label
                            text: 'No song selected'
                            size_hint_y: None
                            height: '30dp'
                            font_size: '18sp'
                            halign: 'center'
                            theme_text_color: 'Primary'
                    
                    # Select Song Button
                    MDRaisedButton:
                        id: select_song_btn
                        text: 'Select a Song'
                        size_hint: (0.6, None)
                        height: '48dp'
                        pos_hint: {'center_x': 0.5}
                        md_bg_color: app.theme_cls.primary_color
                        text_color: 1, 1, 1, 1
                        font_size: '16sp'
                        bold: True
                        on_release: app.file_manager_open()
                    
                    # Generate Recommendations Button
                    MDRaisedButton:
                        id: recommend_btn
                        text: 'Get Recommendations'
                        on_release: app.generate_playlist()
                        size_hint: (0.8, None)
                        height: '48dp'
                        pos_hint: {'center_x': 0.5}
                        md_bg_color: app.theme_cls.primary_color
                        text_color: 1, 1, 1, 1
                        font_size: '16sp'
                        bold: True
                        canvas.before:
                            Color:
                                rgba: 0.13, 0.59, 0.95, 1  # Blue background
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [24,]
                            Color:
                                rgba: 0.13, 0.59, 0.95, 1  # Blue border
                            Line:
                                width: 1.5
                                rounded_rectangle: (self.x, self.y, self.width, self.height, 24)
                    
                    # Recommended Songs Section
                    MDLabel:
                        text: 'Recommended Songs:'
                        size_hint_y: None
                        height: '40dp'
                        font_size: '18sp'
                        bold: True
                        theme_text_color: 'Primary'
                    
                    # Recommended Songs List
                    ScrollView:
                        size_hint: (1, 1)
                        do_scroll_x: False
                        do_scroll_y: True
                        
                        MDList:
                            id: recommended_songs_list
                            size_hint_y: None
                            height: self.minimum_height
                            spacing: '10dp'
                            padding: '10dp'
                            
                            # This will be populated dynamically
                            MDLabel:
                                text: 'Select a song and click "Get Recommendations"'
                                halign: 'center'
                                theme_text_color: 'Secondary'
                                size_hint_y: None
                                height: '40dp'
            
            # Mood-based Playlist Generation Screen
            Screen:
                name: 'generate_screen'
                BoxLayout:
                    orientation: 'vertical'
                    padding: '20dp'
                    spacing: '20dp'
                    
                    MDLabel:
                        text: 'Generate Playlist by Mood'
                        halign: 'center'
                        font_size: '24sp'
                        theme_text_color: 'Primary'
                        bold: True
                    
                    # Mood Selection
                    MDLabel:
                        text: 'Select Mood:'
                        size_hint_y: None
                        height: '40dp'
                        font_size: '18sp'
                        bold: True
                        theme_text_color: 'Primary'
                    
                    GridLayout:
                        id: mood_checkboxes
                        cols: 2
                        spacing: '10dp'
                        padding: '10dp'
                        size_hint_y: None
                        height: '120dp'
                        
                        # Happy
                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint_x: 0.5
                            CheckBox:
                                id: happy_check
                                size_hint: None, None
                                size: '30dp', '30dp'
                                active: True
                                group: 'mood'
                            Label:
                                text: 'Happy'
                                size_hint_x: 0.8
                                color: 0, 0, 0, 1
                                
                        # Sad
                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint_x: 0.5
                            CheckBox:
                                id: sad_check
                                size_hint: None, None
                                size: '30dp', '30dp'
                                group: 'mood'
                            Label:
                                text: 'Sad'
                                size_hint_x: 0.8
                                color: 0, 0, 0, 1
                        
                        # Energetic
                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint_x: 0.5
                            CheckBox:
                                id: energetic_check
                                size_hint: None, None
                                size: '30dp', '30dp'
                                group: 'mood'
                            Label:
                                text: 'Energetic'
                                size_hint_x: 0.8
                                color: 0, 0, 0, 1
                                
                        # Calm
                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint_x: 0.5
                            CheckBox:
                                id: calm_check
                                size_hint: None, None
                                size: '30dp', '30dp'
                                group: 'mood'
                            Label:
                                text: 'Calm'
                                size_hint_x: 0.8
                                color: 0, 0, 0, 1
                    
                    # Song Input
                    MDLabel:
                        text: 'Add Songs (Optional):'
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        
                    MDRaisedButton:
                        id: add_songs_btn
                        text: 'Select Songs'
                        on_release: app.file_manager_open()
                        size_hint: None, None
                        size: '200dp', '48dp'
                        pos_hint: {'center_x': 0.5}
                        md_bg_color: app.theme_cls.primary_color
                        text_color: 1, 1, 1, 1
                        elevation_normal: 2
                        radius: [24,]
                    
                    # Generate Button
                    MDRaisedButton:
                        id: generate_btn
                        text: 'Generate Playlist'
                        on_release: app.generate_playlist()
                        size_hint: (0.8, None)
                        height: '48dp'
                        pos_hint: {'center_x': 0.5}
                        md_bg_color: app.theme_cls.primary_color
                        text_color: 1, 1, 1, 1
                        elevation_normal: 2
                        radius: [24,]
                        
                    # Generated Playlist Section
                    MDLabel:
                        text: 'Generated Playlist:'
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        
                    ScrollView:
                        MDList:
                            id: playlist_items
                            spacing: '10dp'

        # Custom Navigation Bar
        MDBoxLayout:
            size_hint_y: None
            height: '56dp'
            padding: '5dp'
            spacing: '5dp'
            md_bg_color: app.theme_cls.primary_color
            
            # Playlists Button
            MDRaisedButton:
                id: playlists_btn
                text: 'Playlists'
                on_release: root.switch_screen('playlists_screen')
                size_hint_x: 1
                md_bg_color: app.theme_cls.primary_color
                text_color: 1, 1, 1, 1
                elevation_normal: 0
                theme_text_color: 'Custom'
                
            # Library Button
            MDRaisedButton:
                id: library_btn
                text: 'Library'
                on_release: root.switch_screen('library_screen')
                size_hint_x: 1
                md_bg_color: app.theme_cls.primary_color
                text_color: 1, 1, 1, 1
                elevation_normal: 0
                theme_text_color: 'Custom'
                
            # Recommend Button
            MDRaisedButton:
                id: recommend_btn
                text: 'Recommend'
                on_release: root.switch_screen('recommend_screen')
                size_hint_x: 1
                md_bg_color: app.theme_cls.primary_color
                text_color: 1, 1, 1, 1
                elevation_normal: 0
                theme_text_color: 'Custom'
                
            # Generate Button
            MDRaisedButton:
                id: generate_btn
                text: 'Generate'
                on_release: root.switch_screen('generate_screen')
                size_hint_x: 1
                md_bg_color: app.theme_cls.primary_color
                text_color: 1, 1, 1, 1
                elevation_normal: 0
                theme_text_color: 'Custom'
                
            # Settings Button
            MDRaisedButton:
                id: settings_btn
                text: 'Settings'
                on_release: root.switch_screen('settings_screen')
                size_hint_x: 1
                md_bg_color: app.theme_cls.primary_color
                text_color: 1, 1, 1, 1
                elevation_normal: 0
                theme_text_color: 'Custom'