#:kivy 2.1.0
#:import MDButton kivymd.uix.button.MDButton
#:import MDLabel kivymd.uix.label.MDLabel
#:import ScreenManager kivy.uix.screenmanager.ScreenManager
#:import Screen kivy.uix.screenmanager.Screen
#:import BoxLayout kivy.uix.boxlayout.BoxLayout
#:import Button kivy.uix.button.Button
#:import MDTextField kivymd.uix.textfield.MDTextField
#:import MDCheckbox kivymd.uix.selectioncontrol.MDCheckbox
#:import MDBoxLayout kivymd.uix.boxlayout.MDBoxLayout
#:import MDRaisedButton kivymd.uix.button.MDRaisedButton
#:import MDList kivymd.uix.list.MDList
#:import ScrollView kivy.uix.scrollview.ScrollView

<MainScreen>:
    name: 'main_screen'
    
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # White background
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        spacing: 0

        # Main content area
        ScreenManager:
            id: screen_manager

            # Playlists Screen
            Screen:
                name: 'playlists_screen'
                BoxLayout:
                    orientation: 'vertical'
                    padding: '20dp'
                    
                    MDLabel:
                        text: 'Your Playlists'
                        halign: 'center'
                        font_size: '24sp'
                        theme_text_color: 'Primary'
                        bold: True
                    
                    MDLabel:
                        text: 'Your playlists will appear here'
                        halign: 'center'
                        theme_text_color: 'Secondary'

            # Library Screen
            Screen:
                name: 'library_screen'
                BoxLayout:
                    orientation: 'vertical'
                    padding: '20dp'
                    
                    MDLabel:
                        text: 'Music Library'
                        halign: 'center'
                        font_size: '24sp'
                        theme_text_color: 'Primary'
                        bold: True
                    
                    MDLabel:
                        text: 'Your music library will appear here'
                        halign: 'center'
                        theme_text_color: 'Secondary'

            # Generate Screen
            Screen:
                name: 'generate_screen'
                BoxLayout:
                    orientation: 'vertical'
                    padding: '20dp'
                    spacing: '20dp'
                    
                    MDLabel:
                        text: 'Generate Playlist'
                        halign: 'center'
                        font_size: '24sp'
                        theme_text_color: 'Primary'
                        bold: True
                    
                    # Playlist Name Input
                    MDTextField:
                        id: playlist_name
                        hint_text: 'Enter playlist name'
                        helper_text: 'Name your playlist'
                        helper_text_mode: 'on_focus'
                        size_hint_x: 0.8
                        pos_hint: {'center_x': 0.5}
                        
                    # Mood Selection
                    MDLabel:
                        text: 'Select Mood:'
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        
                    MDBoxLayout:
                        adaptive_width: True
                        spacing: '10dp'
                        pos_hint: {'center_x': 0.5}
                        
                        MDCheckbox:
                            id: happy_check
                            group: 'mood'
                            size_hint: None, None
                            size: dp(48), dp(48)
                        MDLabel:
                            text: 'Happy'
                            theme_text_color: 'Primary'
                            
                        MDCheckbox:
                            id: sad_check
                            group: 'mood'
                            size_hint: None, None
                            size: dp(48), dp(48)
                        MDLabel:
                            text: 'Sad'
                            theme_text_color: 'Primary'
                            
                        MDCheckbox:
                            id: energetic_check
                            group: 'mood'
                            size_hint: None, None
                            size: dp(48), dp(48)
                        MDLabel:
                            text: 'Energetic'
                            theme_text_color: 'Primary'
                    
                    # Song Input
                    MDLabel:
                        text: 'Add Songs (Optional):'
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        
                    MDRaisedButton:
                        id: add_songs_btn
                        text: 'Select Songs'
                        on_release: app.file_manager_open()
                        size_hint: None, None
                        size: '200dp', '48dp'
                        pos_hint: {'center_x': 0.5}
                    
                    # Generate Button
                    MDRaisedButton:
                        id: generate_btn
                        text: 'Generate Playlist'
                        on_release: app.generate_playlist()
                        size_hint_x: 0.8
                        pos_hint: {'center_x': 0.5}
                        md_bg_color: app.theme_cls.primaryColor
                        
                    # Generated Playlist Section
                    MDLabel:
                        text: 'Generated Playlist:'
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        
                    ScrollView:
                        MDList:
                            id: playlist_items
                            spacing: '10dp'

        # Custom Navigation Bar
        BoxLayout:
            size_hint_y: None
            height: '56dp'
            canvas.before:
                Color:
                    rgba: 0.13, 0.59, 0.95, 1  # Blue color
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            # Playlists Button
            Button:
                text: 'Playlists'
                background_normal: ''
                background_color: 0.13, 0.59, 0.95, 1  # Blue color
                color: 1, 1, 1, 1
                on_release: root.switch_screen('playlists_screen')
            
            # Library Button
            Button:
                text: 'Library'
                background_normal: ''
                background_color: 0.13, 0.59, 0.95, 1  # Blue color
                color: 1, 1, 1, 1
                on_release: root.switch_screen('library_screen')
            
            # Generate Button
            Button:
                text: 'Generate'
                background_normal: ''
                background_color: 0.13, 0.59, 0.95, 1  # Blue color
                color: 1, 1, 1, 1
                on_release: root.switch_screen('generate_screen')