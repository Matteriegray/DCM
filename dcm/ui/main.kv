#:kivy 2.1.0
#:import MDButton kivymd.uix.button.MDButton
#:import MDLabel kivymd.uix.label.MDLabel
#:import ScreenManager kivy.uix.screenmanager.ScreenManager
#:import Screen kivy.uix.screenmanager.Screen
#:import BoxLayout kivy.uix.boxlayout.BoxLayout
#:import Button kivy.uix.button.Button
#:import MDTextField kivymd.uix.textfield.MDTextField
#:import MDCheckbox kivymd.uix.selectioncontrol.MDCheckbox
#:import MDBoxLayout kivymd.uix.boxlayout.MDBoxLayout

#:import MDList kivymd.uix.list.MDList
#:import ScrollView kivy.uix.scrollview.ScrollView

<MainScreen>:
    name: 'main_screen'
    
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # White background
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        spacing: 0

        # Main content area
        ScreenManager:
            id: screen_manager

            # Playlists Screen
            Screen:
                name: 'playlists_screen'
                BoxLayout:
                    orientation: 'vertical'
                    padding: '20dp'
                    
                    MDLabel:
                        text: 'Your Playlists'
                        halign: 'center'
                        font_size: '24sp'
                        theme_text_color: 'Primary'
                        bold: True
                    
                    MDLabel:
                        text: 'Your playlists will appear here'
                        halign: 'center'
                        theme_text_color: 'Secondary'

            # Library Screen
            Screen:
                name: 'library_screen'
                BoxLayout:
                    orientation: 'vertical'
                    padding: '20dp'
                    
                    MDLabel:
                        text: 'Music Library'
                        halign: 'center'
                        font_size: '24sp'
                        theme_text_color: 'Primary'
                        bold: True
                    
                    MDLabel:
                        text: 'Your music library will appear here'
                        halign: 'center'
                        theme_text_color: 'Secondary'

            # Song Recommendation Screen
            Screen:
                name: 'recommend_screen'
                BoxLayout:
                    orientation: 'vertical'
                    padding: '20dp'
                    spacing: '20dp'
                    
                    MDLabel:
                        text: 'Discover Similar Songs'
                        halign: 'center'
                        font_size: '24sp'
                        theme_text_color: 'Primary'
                        bold: True
                    
                    # Selected Song Display
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: '100dp'
                        spacing: '10dp'
                        padding: '10dp'
                        canvas.before:
                            Color:
                                rgba: 0.95, 0.95, 0.95, 1  # Light gray background
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [10,]
                        
                        MDLabel:
                            text: 'Selected Song:'
                            size_hint_y: None
                            height: '30dp'
                            font_size: '16sp'
                            bold: True
                            theme_text_color: 'Secondary'
                            
                        MDLabel:
                            id: selected_song_label
                            text: 'No song selected'
                            size_hint_y: None
                            height: '30dp'
                            font_size: '18sp'
                            halign: 'center'
                            theme_text_color: 'Primary'
                    
                    # Select Song Button
                    Button:
                        id: select_song_btn
                        text: 'Select a Song'
                        size_hint: (0.6, None)
                        height: '48dp'
                        pos_hint: {'center_x': 0.5}
                        background_color: [0.13, 0.59, 0.95, 1]  # Blue background
                        color: [1, 1, 1, 1]  # White text
                        font_size: '16sp'
                        bold: True
                        on_release: app.file_manager_open()
                    
                    # Recommended Songs Section
                    MDLabel:
                        text: 'Recommended Songs:'
                        size_hint_y: None
                        height: '40dp'
                        font_size: '18sp'
                        bold: True
                        theme_text_color: 'Primary'
                    
                    # Recommended Songs List
                    ScrollView:
                        size_hint: (1, 1)
                        do_scroll_x: False
                        do_scroll_y: True
                        
                        MDList:
                            id: recommended_songs_list
                            size_hint_y: None
                            height: self.minimum_height
                            spacing: '10dp'
                            padding: '10dp'
                            
                            # This will be populated dynamically
                            MDLabel:
                                text: 'Select a song to see recommendations'
                                halign: 'center'
                                theme_text_color: 'Secondary'
                                size_hint_y: None
                                height: '40dp'
                    GridLayout:
                        id: mood_checkboxes
                        cols: 2
                        spacing: '10dp'
                        padding: '10dp'
                        size_hint_y: None
                        height: '120dp'
                        
                        # Happy
                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint_x: 0.5
                            CheckBox:
                                id: happy_check
                                size_hint: None, None
                                size: '30dp', '30dp'
                                active: True
                                group: 'mood'
                            Label:
                                text: 'Happy'
                                size_hint_x: 0.8
                                color: 0, 0, 0, 1
                                
                        # Sad
                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint_x: 0.5
                            CheckBox:
                                id: sad_check
                                size_hint: None, None
                                size: '30dp', '30dp'
                                group: 'mood'
                            Label:
                                text: 'Sad'
                                size_hint_x: 0.8
                                color: 0, 0, 0, 1
                        
                        # Energetic
                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint_x: 0.5
                            CheckBox:
                                id: energetic_check
                                size_hint: None, None
                                size: '30dp', '30dp'
                                group: 'mood'
                            Label:
                                text: 'Energetic'
                                size_hint_x: 0.8
                                color: 0, 0, 0, 1
                                
                        # Calm
                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint_x: 0.5
                            CheckBox:
                                id: calm_check
                                size_hint: None, None
                                size: '30dp', '30dp'
                                group: 'mood'
                            Label:
                                text: 'Calm'
                                size_hint_x: 0.8
                                color: 0, 0, 0, 1
                    
                    # Song Input
                    MDLabel:
                        text: 'Add Songs (Optional):'
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        
                    Button:
                        id: add_songs_btn
                        text: 'Select Songs'
                        on_release: app.file_manager_open()
                        size_hint: None, None
                        size: '200dp', '48dp'
                        pos_hint: {'center_x': 0.5}
                        background_color: 0, 0, 0, 0  # Transparent background
                        color: 0.13, 0.59, 0.95, 1  # Blue text
                        font_size: '16sp'
                        bold: True
                        canvas.before:
                            Color:
                                rgba: 0.95, 0.95, 0.95, 1  # Light gray background
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [24,]
                            Color:
                                rgba: 0.13, 0.59, 0.95, 1  # Blue border
                            Line:
                                width: 1.5
                                rounded_rectangle: (self.x, self.y, self.width, self.height, 24)
                    
                    # Generate Button
                    Button:
                        id: generate_btn
                        text: 'Generate Playlist'
                        on_release: app.generate_playlist()
                        size_hint: 0.8, None
                        height: '48dp'
                        pos_hint: {'center_x': 0.5}
                        background_color: 0, 0, 0, 0  # Transparent background
                        color: 1, 1, 1, 1  # White text
                        font_size: '16sp'
                        bold: True
                        canvas.before:
                            Color:
                                rgba: 0.13, 0.59, 0.95, 1  # Blue background
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [24,]
                            Color:
                                rgba: 0.13, 0.59, 0.95, 1  # Blue border
                            Line:
                                width: 1.5
                                rounded_rectangle: (self.x, self.y, self.width, self.height, 24)
                        
                    # Generated Playlist Section
                    MDLabel:
                        text: 'Generated Playlist:'
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        
                    ScrollView:
                        MDList:
                            id: playlist_items
                            spacing: '10dp'

        # Custom Navigation Bar
        BoxLayout:
            size_hint_y: None
            height: '56dp'
            padding: '5dp'
            spacing: '5dp'
            canvas.before:
                Color:
                    rgba: 0.13, 0.59, 0.95, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            
            # Playlists Button
            Button:
                id: playlists_btn
                text: 'Playlists'
                on_release: root.switch_screen('playlists_screen')
                size_hint_x: 1
                background_color: 0.13, 0.59, 0.95, 1
                color: 1, 1, 1, 1
                font_size: '14sp'
                bold: True
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [5,]
            
            # Library Button
            Button:
                id: library_btn
                text: 'Library'
                on_release: root.switch_screen('library_screen')
                size_hint_x: 1
                background_color: 0.13, 0.59, 0.95, 1
                color: 1, 1, 1, 1
                font_size: '14sp'
                bold: True
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [5,]
            
            # Generate Button
            Button:
                id: generate_btn_nav
                text: 'Generate'
                on_release: root.switch_screen('recommend_screen')
                size_hint_x: 1
                background_color: 0.13, 0.59, 0.95, 1
                color: 1, 1, 1, 1
                font_size: '14sp'
                bold: True
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [5,]